<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="f_name"/>
                <field name="l_name"/>
                <field name="history"/>
                <field name="address"/>
                <field name="age"/>
                <field name="blood_type"/>
                <field name="pcr"/>
                <field name="department_id"/>
                <field name="state"/>

            </tree>
        </field>
    </record>

    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">patient.form.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_add_log" type="object"
                            string="Add Log History" class="btn btn-primary"/>
                    <button name="action_good" type="object" string="Good"
                            class="btn-success" invisible="state not in ('undetermined' , 'fair')"/>
                    <button name="action_fair" type="object" string="Fair"
                            class="btn-warning" invisible="state not in ('good','serious','undetermined')"/>
                    <button name="action_serious" type="object" string="Serious"
                            class="btn-danger" invisible="state not in ('undetermined', 'fair')"/>
                    <field name="state" widget="statusbar" statusbar_visible="undetermined,good,fair,serious"/>
                </header>
                <sheet>
                    <group>
                        <group string="General info.">
                            <field name="f_name"/>
                            <field name="l_name"/>
                            <field name="email"/>
                            <field name="birth_date"/>
                            <field name="image" widget="image" options='{"size":[100, 100]}'/>
                            <field name="address"/>
                            <field name="age"/>
                        </group>
                        <group string="Medical History">
                            <field name="history" invisible="age &lt; 50"/>
                            <field name="pcr"/>
                            <field name="cr_ratio" required="cr_ratio== 0.00"/>
                            <field name="blood_type"/>
                            <field name="department_id" domain="[('is_opened', '=', True)]"/>
                            <field name="doctor_ids" widget="many2many_tags"
                                   readonly="department_id == False"/>
                            <field name="state"/>

                        </group>
                    </group>
                    <notebook>
                        <page str="Log History">
                            <field name="line_ids">
                                <tree>
                                    <field name="created_by"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hms_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menuitem_hms_patient"
              name="All Patients"
              parent="menu_root_patient"
              action="hms_patient_action"/>


</odoo>